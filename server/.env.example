# Copy this file to .env and fill in the values

# ── AI (Anthropic) ─────────────────────────────────────────────────────────────
ANTHROPIC_API_KEY=sk-ant-...

# ── Security ───────────────────────────────────────────────────────────────────
# Generate with: node -e "require('crypto').randomBytes(48).toString('hex')"
JWT_SECRET=your_very_long_random_secret_at_least_48_chars

# ── App URL (used in invite emails — must match your production domain) ─────────
APP_URL=https://your-app-domain.com

# ── Email (Resend — https://resend.com) ────────────────────────────────────────
RESEND_API_KEY=re_...
RESEND_FROM_EMAIL=CirculERP <noreply@yourdomain.com>

# ── Optional ───────────────────────────────────────────────────────────────────
PORT=3001
UPLOADS_PATH=./uploads
DB_PATH=./data/erp.db
